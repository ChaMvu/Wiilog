<form method="post" action="{{ path('company_delete', {'id': company.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce contact?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ company.id) }}">
    <div class="row justify-content-center">
        <button class="btn btn-outline-light col-3">Supprimer</button>
    </div>
</form>
