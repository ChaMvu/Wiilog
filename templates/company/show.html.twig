{% extends 'base.html.twig' %}

{% block title %}Entreprise{% endblock %}

{% block body %}
    <h1 class="title">Informations de l'entreprise</h1>

    <div class="container">
        <div class="row">
            <table class="table">
                <tbody>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Français</th>
                </tr>
                <tr>
                    <td>{{ company.name}}</td>
                    <td>{{ company.email}}</td>

                    <td class="form-check-label">{{ company.french ? 'Oui' : 'Non' }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <h2>Contacts de l'entreprise:</h2>

        <ul>
            {% for contact in company.contacts %}
                <li>
                    <a href="{{ path('contact_show', {'id' : contact.id}) }}">{{ contact.name }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>

    <div class="row justify-content-center">
        <a class="btn btn-outline-secondary col-3" href="{{ path('company_edit', {'id': company.id}) }}">Modifier</a>
    </div>

    <div class="row justify-content-center">
        <a class="btn btn-outline-secondary col-3" href="{{ path('company_index') }}">Retour à la liste</a>
    </div>

    {{ include('company/_delete_form.html.twig') }}

{% endblock %}
